<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".CreateEvent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Product Name"/>

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/pname"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="Name of Product"
            android:background="@drawable/shape"
            android:drawablePadding="10dp"
            android:ems="10"
            android:paddingStart="10dp" />




        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Description"/>

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/pdesc"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Start Typing Your Product Details!!!!"
            android:background="@drawable/shape"
            android:ems="10"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text=" Regular Price"/>

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/pprice"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="Enter Regular Price (in Rs)"
            android:background="@drawable/shape"
            android:drawablePadding="10dp"
            android:ems="10"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text=" Sale Price"/>

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/sprice"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="Enter Sale Price (in Rs)"
            android:background="@drawable/shape"
            android:drawablePadding="10dp"
            android:ems="10"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Product Image"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/pimage"
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/shape"
            android:tag="exist"
            />

            <ImageView
                android:id="@+id/clickimage"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_below="@+id/pimage"
                android:layout_alignRight="@+id/pimage"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="-25dp"
                app:srcCompat="@drawable/ic_camera"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Colors"/>


<Spinner
    android:layout_marginTop="3dp"
    android:id="@+id/procolor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</Spinner>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/create"
            android:text="Create Product"
            android:width="250dp"
            android:elevation="25dp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="#59f"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

</ScrollView>